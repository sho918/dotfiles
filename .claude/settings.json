{
  "alwaysThinkingEnabled": true,
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/stop-send-notification.mjs",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ]
  },
  "model": "sonnet[1m]",
  "permissions": {
    "allow": [],
    "defaultMode": "plan",
    "deny": ["Bash(aws:*)", "Bash(aws-vault:*)"]
  },
  "statusLine": {
    "command": "npx -y ccusage statusline",
    "padding": 0,
    "type": "command"
  }
}
